    	<parameter property="br" />
    	<parameter property="imageSavePath" />
	</parameterMap>
	
	<select id="selectSensorFromId" resultType="SensorDto">
		<![CDATA[
			SELECT
				ID,
				IMAGEBYTEARRAY,
	        	LABEL,
	        	ROLL,
	        	PITCH,
	        	YAW,
	        	BR,
	        	DATE_FORMAT(REGISTERDATE, "%Y-%m-%d") REGISTERDATE
		    FROM
				EYEDETECT.SENSOR
			WHERE
				ID = #{id}
		]]>
	</select>
		
	<insert id="insertSensor" parameterMap="SensorDtoResultMap">
		 <![CDATA[
	        INSERT INTO EYEDETECT.SENSOR
	        (
	        	IMAGESAVEPATH,
	        	LABEL,
	        	ROLL,
	        	PITCH,
	        	YAW,
	        	BR,
	        	REGISTERDATE
	        )
			VALUES
			(
				#{imageSavePath},
				#{label},
				#{roll},
				#{pitch},
				#{yaw},
				#{br},
				NOW()
			)
	     ]]>
	</insert>
	
	<select id="selectSensorList" resultType="SensorDto">
		<![CDATA[
			SELECT
				ID,
				IMAGEBYTEARRAY,
	        	LABEL,
	        	ROLL,
	        	PITCH,
	        	YAW,
	        	BR,
	        	DATE_FORMAT(REGISTERDATE, "%Y-%m-%d") REGISTERDATE
		    FROM
				EYEDETECT.SENSOR
		]]>
	</select>
	
	<delete id="deleteAllFromSensor">
		<![CDATA[
			DELETE
			FROM
				EYEDETECT.SENSOR
			WHERE
				ID >= 0
		]]>
	</delete>
	
	<delete id="deleteFromSensorWhereId">
		<![CDATA[
			DELETE
			FROM
				EYEDETECT.SENSOR
			WHERE
				ID = #{id}
		]]>
	</delete>
	
